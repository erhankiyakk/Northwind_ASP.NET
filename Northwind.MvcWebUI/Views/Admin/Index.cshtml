@model System.Collections.Generic.List<Northwind.Entities.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Admin Paneli</h2>

@Html.ActionLink("CreateNew", "CreateNew")
<table class="table table-dark">
    <thead>
        <tr>
            <td>Product Id</td>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { productId = item.ProductID })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { productId = item.ProductID })
                </td>
            </tr>
        }
    </tbody>
</table>
